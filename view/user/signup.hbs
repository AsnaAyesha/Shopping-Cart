<section>
    <div class="container mt-4">
        <div class="row " style="margin-left: 4rem;">
            <div class="col-md-6 col-md-offset-8 centered " style="margin-left: 10rem;">
                <div>
                    <h2 style=" margin: 2rem; text-align: center;">Create new account</h2>
                </div>
                <form action="\signup" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control " name="Name" placeholder="Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email address</label>
                        <input type="email" class="form-control " name="Email" placeholder="email@example.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control " name="Password" placeholder="Password">
                    </div>
                    <div class="mb-3">
                        <a href="/signup">Already have account?</a>
                        <button type="submit" class="btn btn-primary float-right "
                            style="margin-left: 27rem;margin-top: -3rem;"> Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>